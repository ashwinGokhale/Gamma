{
	"compilerOptions": {
		"lib": ["es2017", "es2015", "es2015.promise"],
		"module": "commonjs",
		"noImplicitReturns": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "es6",
		"typeRoots": ["./node_modules/@types"],
		"allowJs": true,
		"removeComments": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts", "gulpfile.babel.js"]
}
